<mvc:View
				controllerName="sov.comp.amalitech.forum.controller.Detail"
				displayBlock="true"
				xmlns="sap.m"
				xmlns:mvc="sap.ui.core.mvc">
	<Panel class="sapUiTinyMarginTop">
		<Panel headerText="{ parts:[ {path: 'generalThread>author_ID'} , { path: 'i18n>threadBy' } ], formatter: '.getAuthorName'  }">
			<Text text="{generalThread>content}"/>
		</Panel>
		<Panel>
			<List id="answersList" items="{
							path: 'generalThread>ans',
							parameters: {operationMode: 'Server'},
							sort: {
								path: 'generalThread>createdAt'
							}
						}">
				<FeedListItem sender="{path: 'generalThread>author_ID', formatter: '.getAuthorName' }"
				              timestamp="{generalThread>createdAt}" text="{generalThread>content}" showIcon="false">
<!--					<FeedListItemAction text="{i18n>editText}" icon="sap-icon://edit" key="edit" press=""/>-->
<!--					<FeedListItemAction text="{i18n>deleteText}" icon="sap-icon://delete" key="delete" press=".onDelete"/>-->
				</FeedListItem>
			</List>
		</Panel>
	</Panel>

</mvc:View>
				<!--//Thread by {generalThread>author_ID}-->