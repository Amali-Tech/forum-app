<core:FragmentDefinition
				xmlns="sap.m"
				xmlns:core="sap.ui.core" >
	<Dialog	id="updateAnswerDialog" title="{i18n>dialogTitle}">
		<Panel class="sapUi5Padding">
			<VBox class="sapUi5Padding">
				<Label text="{i18n>createThreadInputTitle}"/>
				<Textarea value="{answerModel>/answer/content}" width="100%" height="150px" valueLiveUpdate="true"/>
			</VBox>
			<HBox justifyContent="SpaceBetween" width="100%">
				<Button text="{i18n>threadBtnUpdate}" press=".onUpdateAnswer" icon="sap-icon://write-new" />
				<Button text="{i18n>dialogCancel}" press=".onCloseDialog" icon="sap-icon://cancel" />
			</HBox>
		</Panel>
	</Dialog>
</core:FragmentDefinition>