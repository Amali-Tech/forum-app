<core:FragmentDefinition
				xmlns="sap.m"
				xmlns:core="sap.ui.core" >
	<Dialog
					id="updateTweetDialog"
					title="{i18n>dialogTitle}">
		<Panel class="sapUi5Padding">
			<VBox class="sapUi5Padding">
				<Label text="{i18n>createThreadInputTitle}"/>
				<Input value="{tweetUpdate>/update/title}" valueLiveUpdate="true"/>
			</VBox>
			<VBox class="sapUi5Padding">
				<Label text="{i18n>createThreadInputContent}"/>
				<Textarea value="{tweetUpdate>/update/content}" placeholder="{i18n>createThreadContentPlaceHolder}" valueLiveUpdate="true" width="100%"/>
			</VBox>
			<HBox justifyContent="SpaceBetween" width="100%">
				<Button text="{i18n>threadBtnUpdate}" press=".onUpdateTweet" icon="sap-icon://write-new" />
				<Button text="{i18n>dialogCancel}" press=".onCloseDialog" icon="sap-icon://cancel" />
			</HBox>
		</Panel>
	</Dialog>
</core:FragmentDefinition>